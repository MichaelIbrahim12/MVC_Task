@model MVC_Task.Models.Entities.Student

@{
    ViewData["Title"] = "Create";
}

<h1>@MVC_Task.Languages.Resource1.Createnew</h1>

<h4>@MVC_Task.Languages.Resource1.Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="Name" class="control-label">@MVC_Task.Languages.Resource1.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">@MVC_Task.Languages.Resource1.Gender</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label">@MVC_Task.Languages.Resource1.City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">@MVC_Task.Languages.Resource1.DateOfBirth</label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@MVC_Task.Languages.Resource1.Createnew" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@MVC_Task.Languages.Resource1.BacktoList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
